<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="285dp"
        android:layout_height="378dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="208dp"
            android:layout_height="26dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Nombre"
            android:textColor="#56A9EC"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="64dp" />

        <EditText
            android:id="@+id/editTextTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Introduce tu nombre"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewApellidos"
            android:layout_width="208dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:text="Apellidos"
            android:textColor="#56A9EC"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="134dp" />

        <EditText
            android:id="@+id/editTextTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Introduce tus apellidos"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="206dp"
            android:layout_height="26dp"
            android:layout_marginLeft="5dp"
            android:text="Correo Electrónico"
            android:textColor="#56A9EC"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="208dp" />

        <EditText
            android:id="@+id/editTextTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Introduce tu correo electronico"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="210dp"
            android:layout_height="22dp"
            android:layout_marginLeft="5dp"
            android:text="Contraseña"
            android:textColor="#56A9EC"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="284dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Introduce tu contraseña"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewConfirmarPassword"
            android:layout_width="211dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="Confirmar Contraseña"
            android:textColor="#56A9EC"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="372dp" />

        <EditText
            android:id="@+id/editTextTextConfirmarPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Confirma tu contraseña"
            android:inputType="textPassword"
            android:textSize="12sp" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:backgroundTint="#47A8F6"
        android:text="Cancelar"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonRegistrarse"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:backgroundTint="#47A8F6"
        android:text="Registrarse"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonCancelar"/>
</androidx.constraintlayout.widget.ConstraintLayout>