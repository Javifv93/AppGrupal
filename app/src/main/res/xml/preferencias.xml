<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="Categoria1"
        android:title="Credenciales">

        <EditTextPreference
            android:key="pwd"
            android:title="Contraseña"
            android:summary="Contraseña"
            android:dialogTitle="Introduce la contraseña" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Categoria2"
        android:title="Contactos de emergencia">

        <EditTextPreference
            android:key="phonellama"
            android:title="LLamada"
            android:summary="Telefono"
            android:dialogTitle="Introduce el telefono para de un contacto al que llamar en caso de una emergencia" />
    </PreferenceCategory>
        <EditTextPreference
            android:key="phonesms"
            android:title="SMS"
            android:summary="Telefono"
            android:dialogTitle="Introduce el telefono para de un contacto al que mandar un SMS con tu ubicación en caso de una emergencia" />
        <EditTextPreference
            android:key="mail"
            android:title="Correo"
            android:summary="Correo"
            android:dialogTitle="Introduce el correo electrónico al que mandar una fotografía en caso de una emergencia" />
</PreferenceScreen>